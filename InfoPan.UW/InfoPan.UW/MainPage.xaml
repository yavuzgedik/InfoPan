<Page
    x:Class="InfoPan.UW.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InfoPan.UW"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        x:Name="Layout" 
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="Layout_Loaded">

        <Button 
            x:Name="feedBtn"
            Content="Feed"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" 
            Margin="50" Click="feedBtn_Click"/>

        <ListBox 
            x:Name="izsuListBox" 
            HorizontalAlignment="Left" 
            Height="440" 
            VerticalAlignment="Top" 
            Width="450" Margin="50,100,0,0"/>

        <WebView 
            x:Name="webView"
            HorizontalAlignment="Left" 
            Height="440" 
            VerticalAlignment="Top" 
            Width="426" 
            Margin="520,100,0,0"/>



    </Grid>
</Page>
